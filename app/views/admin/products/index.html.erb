<div class="col-md-12 col-centered">
  <div class="panel panel-info">
    <div class="panel-heading text-left">
      <h2> 商品列表 </h2>
    </div>

    <div class="panel-footer">
      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>序号</th>
            <th width="220">商品图片</th>
            <th>名称</th>
            <th>价格</th>
            <th width="100"> 选项</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td>
                <%= link_to product_path(product) do %>
                  <% if product.photos.present? %>
                    <%= image_tag(product.photos[0].image.thumb.url, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
                <% end %>
              </td>
              <td><%= product.title %></td>
              <td><%= product.price %></td>
              <td>
                <%= link_to("Edit", edit_admin_product_path(product)) %>
                <%= link_to("Destroy", admin_product_path(product), method: :delete, data: { confirm: "Are your sure?" }) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
