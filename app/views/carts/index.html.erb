<% if current_cart.products.present?  %>
<!-- 判断沟物车未添加任何商品时不能出现结账按钮或购物车页面 -->
  <!-- <div class="row"> -->
     <div class="col-md-10 col-md-offset-1">
       <!-- 购物车，清空购物车 -->
       <br>
       <div class="row">
         <h3 class="col-md-6">购物车</h3>
         <span class="col-md-6 clean_carts">
           <%= link_to("清空购物车", clean_carts_path,method: :delete, class: "pull-right",
        data: { confirm: "你确定要清空整个购物车吗？"} )%>
      </span>
    </div>

    <!-- 购物列表 -->
    <div class="shopping-cart">

      <!-- 列表的头部 -->
      <div class="cart-column-head center-block">
        <label class="col-md-2 product-image-cart">商品</label>
        <label class="col-md-2 product-title-cart">名称</label>
        <label class="col-md-2 product-price-cart">单价</label>
        <label class="col-md-2 product-quantity-cart">数量</label>
        <label class="col-md-2 product-line-price-cart">小计</label>
        <label class="col-md-2 product-removal-cart">操作</label>
      </div>

    <!-- <div class="panel panel-info" style="margin-top:60px;">
      <div class="panel-heading" style="font-size:20px;background-color:white; color:#e4371f">购物车</div>
      <table class="table table-hover table-bordered">
        <thead >
          <tr >
            <th colspan="2" class="text-center">商品信息</th>
            <th>单价</th>
            <th>数量</th>
            <th>小计（RMB）</th>
            <th>操作</th>
          </tr>
        </thead> -->

        <!-- 列表购物车商品 -->
          <% current_cart.cart_items.each do |cart_item| %>
                <!-- 商品图片 -->
                <div class="product-list row text-center">
                  <div class="col-md-2 product-image-cart">
                    <%= link_to product_path(cart_item.product) do %>
                      <% if cart_item.product.photos.present? %>
                        <%= image_tag(cart_item.product.photos[0].image.small.url, class: "thumbnail img-responsive center-block") %>
                      <% else %>
                        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail img-responsive center-block") %>
                      <% end %>
                    <% end %>
                  </div>
                  <!-- 商品名称 -->
                  <div class="col-md-2 product-title-cart">
                    <%= cart_item.product.title %>
                  </div>
                  <!-- 商品价格 -->
                  <div class="col-md-2 product-title-cart">
                    <%= cart_item.product.price %>
                  </div>
                  <!-- 商品数量 -->
                  <div class="col-xs-2 product-title-cart">
                <div class="cartPage-productList">
                  <div class="item-quantity fl tc">
                    <div class="countNumber">
                      <%= link_to("-", reduce_quantity_cart_item_path(cart_item.product_id), class: "countNumber-btn countNumber-btn-sub", method: :post) %>
                      <input class="countNumber-input" type="text" value="<%= cart_item.quantity %>">
                      <%= link_to("+", add_quantity_cart_item_path(cart_item.product_id), class: "countNumber-btn countNumber-btn-plus", method: :post) %>
                    </div>
                  </div>
                </div>
              </div>
              <!-- 商品小计 -->
            <div class="col-xs-2 product-title-cart">
              <%= cart_item.product.price * cart_item.quantity  %>
            </div>
            <!-- 删除商品 -->
              <div>
                <%= link_to("删除", cart_item_path(cart_item.product_id), method: :delete)%>
              </div>
            </div>
            <hr>
          <% end %>
      </div>

      <!-- 合计详情 -->
      <div class="row">
        <span class="pull-right text-center product-price-total">
          总计： <%= render_cart_total_price(current_cart) %> RMB
        </span>
      </div>

      <br>

      <div class="checkout clearfix">
        <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
      </div>
    </div>
  <!-- </div> -->

<% elsif %>
  <% if !current_user %>
  <!--假如用户没有登录 -->
  <br><br><br><br>
    <h5 class="text-center" style="font-size:30px;">购物车内暂时没有商品，登录后将显示您之前加入的商品 <br>
      <br>
      <br>
      <%= link_to("去登录>>", new_user_session_path)%>
    </h5>
  <% end %>
<% else %>
    <% if current_user %>
    <!--假如用户已登录 -->
    <br><br><br><br>
      <h5 class="text-center"style="font-size:30px;">购物车空空的哦~，去看看心仪的商品吧~ <br>
        <br>
        <br>
        <%= link_to("去购物>>", products_path)%>
      </h5>
    <% end %>
<% end %>
