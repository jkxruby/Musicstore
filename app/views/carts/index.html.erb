<% if current_cart.products.present?  %>
<!-- 判断沟物车未添加任何商品时不能出现结账按钮或购物车页面 -->
  <div class="row">
     <div class="col-md-8 col-md-offset-2">
      <%= link_to("清空购物车", clean_carts_path,
        method: :delete, class: "pull-right",
        style: "color: #E9967A;",
        data: { confirm: "你确定要清空整个购物车吗？"} )%>

      <h2> 购物车 </h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">商品资讯</th>
            <th>单价</th>
            <th>数量</th>
            <th>操作选项</th>
          </tr>
        </thead>
        <tbody>
          <% current_cart.cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to product_path(cart_item.product) do %>
                  <% if cart_item.product.photos.present? %>
                    <%= image_tag(cart_item.product.photos[0].image.small.url, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to(cart_item.product.title, product_path(cart_item.product))%></td>
              <td><%= cart_item.product.price %></td>
              <td>
                <div class="cartPage-productList">
                  <%#= render :partial => "cart_countnumber" %>
                  <div class="item-quantity fl tc">
                    <div class="countNumber">
                      <%= link_to("-", reduce_quantity_cart_item_path(cart_item.product_id), class: "countNumber-btn countNumber-btn-sub", method: :post) %>
                      <input class="countNumber-input" type="text" value="<%= cart_item.quantity %>">
                      <%= link_to("+", add_quantity_cart_item_path(cart_item.product_id), class: "countNumber-btn countNumber-btn-plus", method: :post) %>
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

      <div class="total clearfix">
        <span class="pull-right">
          总计 <%= render_cart_total_price(current_cart) %> RMB
        </span>
      </div>

      <hr>

      <div class="checkout clearfix">
        <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
      </div>
    </div>
  </div>

<% elsif %>
  <% if !current_user %>
  <!--假如用户没有登录 -->
  <br><br><br><br>
    <h5 class="text-center">购物车内暂时没有商品，登录后将显示您之前加入的商品 <br>
      <%= link_to("去购物>", products_path, )%>
    </h5>
  <% end %>
<% else %>
    <% if current_user %>
    <!--假如用户已登录 -->
    <br><br><br><br>
      <h5 class="text-center">购物车空空的哦~，去看看心仪的商品吧~ <br>
        <%= link_to("去购物>", products_path, )%>
      </h5>
    <% end %>
<% end %>
